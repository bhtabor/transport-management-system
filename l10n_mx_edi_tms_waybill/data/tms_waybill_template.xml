<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="tms_waybill_template" inherit_id="l10n_mx_edi.cfdiv33">
        <xpath expr="//*[name()='cfdi:Comprobante']" position="attributes" t-if="record.waybill_ids">
            <attribute name="t-att-xmlns__cartaporte20">"http://www.sat.gob.mx/CartaPorte20" if record.waybill_ids else False</attribute>
        </xpath>
        <xpath expr="*" position="inside">
            <t t-if="record.waybill_ids">
                <cfdi:Complemento
                    xmlns:cfdi="http://www.sat.gob.mx/cfd/3"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                    <cartaporte20:CartaPorte
                        xmlns:cartaporte20="http://www.sat.gob.mx/CartaPorte20"
                        xsi:schemaLocation="http://www.sat.gob.mx/sitio_internet/cfd/CartaPorte/CartaPorte20.xsd"
                        Version="2.0"
                        t-att-TranspInternac="record.waybill_ids.l10n_mx_edi_international"
                        t-att-EntradaSalidaMerc="record.waybill_ids.l10n_mx_edi_international_type"
                        t-att-PaisOrigenDestino="record.waybill_ids.l10n_mx_edi_foreign_country_id.l10n_mx_edi_code"
                        t-att-ViaEntradaSalida="record.waybill_ids.l10n_mx_edi_departure_station_id.code"
                        t-att-TotalDistRec="sum([location.get('distance', 0) for location in locations])"
                            >
                            <cartaporte20:Ubicaciones>
                                <t t-foreach="locations" t-as="location">
                                    <cartaporte20:Ubicacion
                                        t-att-TipoUbicacion="location.get('type')"
                                        t-att-IDUbicacion="location.get('id')"
                                        t-att-RFCRemitenteDestinatario="location.get('partner').vat"
                                        t-att-NombreRemitenteDestinatario="format_string(location.get('partner').name)"
                                        t-att-NumRegIdTrib="location.get('partner').vat if location.get('foreign') else False"
                                        t-att-ResidenciaFiscal="location.get('partner').country_id.l10n_mx_edi_code if location.get('foreign') else False"
                                        t-att-NumEstacion=""
                                        t-att-NombreEstacion=""
                                        t-att-NavegacionTrafico=""
                                        t-att-FechaHoraSalidaLlegada="location.get('date')"
                                        t-att-TipoEstacion="record.waybill_ids.l10n_mx_edi_station_type"
                                        t-att-DistanciaRecorrida="location.get('distance')"
                                        >
                                        <cartaporte20:Domicilio
                                            t-att-Calle="location.get('partner').street_name"
                                            t-att-NumeroExterior="location.get('partner').street_number"
                                            t-att-NumeroInterior="location.get('partner').street_number2"
                                            t-att-Colonia="location.get('partner').l10n_mx_edi_colony"
                                            t-att-Localidad="location.get('partner').l10n_mx_edi_locality_id.code"
                                            t-att-Referencia="location.get('partner').ref"
                                            t-att-Municipio="location.get('partner').city_id.l10n_mx_edi_code"
                                            t-att-Estado="location.get('partner').state_id.l10n_mx_edi_code"
                                            t-att-Pais="location.get('partner').country_id.l10n_mx_edi_code"
                                            t-att-CodigoPostal="location.get('partner').zip"
                                            />
                                    </cartaporte20:Ubicacion>
                                </t>
                            </cartaporte20:Ubicaciones>
                            <cartaporte20:Mercancias
                                t-att-PesoBrutoTotal="sum([(line.quantity * line.transportable_id.l10n_mx_edi_weight_factor) + line.l10n_mx_edi_tare for line in record.waybill_ids.transportable_line_ids])"
                                t-att-UnidadPeso="record.waybill_ids.transportable_line_ids[0].transportable_uom_id.unspsc_code_id.code"
                                t-att-PesoNetoTotal="sum([line.quantity * line.transportable_id.l10n_mx_edi_weight_factor for line in record.waybill_ids.transportable_line_ids])"
                                t-att-NumTotalMercancias="len(record.waybill_ids.transportable_line_ids)"
                                t-att-CargoPorTasacion="">
                                <t t-foreach="record.waybill_ids.transportable_line_ids" t-as="line">
                                    <cartaporte20:Mercancia
                                        t-att-BienesTransp="line.transportable_id.unspsc_code_id.code"
                                        t-att-ClaveSTCC=""
                                        t-att-Descripcion="line.transportable_id.name"
                                        t-att-Cantidad="line.quantity"
                                        t-att-ClaveUnidad="line.transportable_uom_id.unspsc_code_id.code"
                                        t-att-Unidad="format_string(line.transportable_uom_id.name, 20)"
                                        t-att-Dimensiones="line.transportable_id.l10n_mx_edi_dimensions"
                                        t-att-MaterialPeligroso="'SÃ­' if line.transportable_id.l10n_mx_edi_dangerous_material_id else 'No'"
                                        t-att-CveMaterialPeligroso="line.transportable_id.l10n_mx_edi_dangerous_material_id.code"
                                        t-att-Embalaje="line.transportable_id.l10n_mx_edi_packaging_id.code"
                                        t-att-DescripEmbalaje="line.transportable_id.l10n_mx_edi_packaging_id.name"
                                        t-att-PesoEnKg="line.quantity * line.transportable_id.l10n_mx_edi_weight_factor"
                                        t-att-ValorMercancia="line.l10n_mx_edi_merchandise_value"
                                        t-att-Moneda="line.currency_id.name"
                                        t-att-FraccionArancelaria="line.transportable_id.l10n_mx_edi_tariff_fraction_id.code"
                                        t-att-UUIDComercioExt="line.l10n_mx_edi_uuid"
                                    >
                                    <t t-if="line.l10n_mx_edi_customs_number">
                                        <t t-set="customs_numbers" t-value="line.l10n_mx_edi_customs_number.split(',')"/>
                                        <t t-foreach="customs_numbers" t-as="customs_number">
                                            <cartaporte20:Pedimentos
                                                t-att-Pedimento="customs_number"
                                            />
                                        </t>
                                    </t>
                                    <t t-if="line.l10n_mx_edi_tracking_number">
                                        <cartaporte20:GuiasIdentificacion
                                            t-att-NumeroGuiaIdentificacion="line.l10n_mx_edi_tracking_number"
                                            t-att-IDOrigen="[location.get('id') for location in locations if location.get('type') == 'Origen'][0]"
                                            t-att-IDDestino="[location.get('id') for location in locations if location.get('type') == 'Destino'][0]"
                                        />
                                    </t>
                                    <!--cartaporte20:CantidadTransporta
                                        t-att-Cantidad="line.quantity"
                                        t-att-Unidad="line.transportable_uom_id.name"
                                        t-att-CvesTransporte="record.waybill_ids.l10n_mx_edi_transport_type if record.waybill_ids.l10n_mx_edi_international else False"
                                    /-->
                                    <cartaporte20:DetalleMercancia
                                        t-att-UnidadPesoMerc="line.transportable_uom_id.unspsc_code_id.code"
                                        t-att-PesoBruto="(line.quantity * line.transportable_id.l10n_mx_edi_weight_factor) + line.l10n_mx_edi_tare"
                                        t-att-PesoNeto="line.quantity * line.transportable_id.l10n_mx_edi_weight_factor"
                                        t-att-PesoTara="line.l10n_mx_edi_tare"
                                        t-att-NumPiezas="int(line.quantity)"
                                    />
                                    </cartaporte20:Mercancia>
                                </t>
                                <cartaporte20:Autotransporte
                                    t-att-PermSCT="record.company_id.l10n_mx_edi_sct_permit_type"
                                    t-att-NumPermisoSCT="record.company_id.l10n_mx_edi_sct_permit_number"
                                >
                                    <t t-set="travel" t-value="record.waybill_ids.travel_ids[0]"/>
                                    <cartaporte20:IdentificacionVehicular
                                        t-att-ConfigVehicular="travel.l10n_mx_edi_configuration"
                                        t-att-PlacaVM="travel.unit_id.license_plate"
                                        t-att-AnioModeloVM="travel.unit_id.model_year"
                                    />
                                    <cartaporte20:Seguros
                                        t-att-AseguraRespCivil="travel.unit_id.insurance_supplier_id.name"
                                        t-att-PolizaRespCivil="travel.unit_id.insurance_policy"
                                        t-att-AseguraMedAmbiente=""
                                        t-att-PolizaMedAmbiente=""
                                        t-att-AseguraCarga="record.waybill_ids.l10n_mx_edi_cargo_insurance_partner_id.name"
                                        t-att-PolizaCarga="record.waybill_ids.l10n_mx_edi_cargo_insurance_policy"
                                        t-att-PrimaSeguro="record.waybill_ids.l10n_mx_edi_insurance_fee"
                                    />
                                    <cartaporte20:Remolques>
                                        <t t-foreach="trailers" t-as="trailer">
                                            <cartaporte20:Remolque
                                                t-att-SubTipoRem="trailer.l10n_mx_edi_trailer_type"
                                                t-att-Placa="trailer.license_plate"
                                            />
                                        </t>
                                    </cartaporte20:Remolques>
                                </cartaporte20:Autotransporte>
                            </cartaporte20:Mercancias>
                            <cartaporte20:FiguraTransporte>
                                <cartaporte20:TiposFigura
                                    t-att-TipoFigura=""
                                    t-att-RFCFigura=""
                                    t-att-NumLicencia=""
                                    t-att-NombreFigura=""
                                    t-att-NumRegIdTribFigura=""
                                    t-att-ResidenciaFiscalFigura=""
                                >
                                    <cartaporte20:PartesTransporte
                                        t-att-ParteTransporte=""
                                    />
                                    <cartaporte20:Domicilio
                                        t-att-Calle=""
                                        t-att-NumeroExterior=""
                                        t-att-NumeroInterior=""
                                        t-att-Colonia=""
                                        t-att-Localidad=""
                                        t-att-Referencia=""
                                        t-att-Municipio=""
                                        t-att-Estado=""
                                        t-att-Pais=""
                                        t-att-CodigoPostal=""
                                    />
                                </cartaporte20:TiposFigura>
                            </cartaporte20:FiguraTransporte>
                    </cartaporte20:CartaPorte>
                </cfdi:Complemento>
            </t>
        </xpath>
    </template>
</odoo>
